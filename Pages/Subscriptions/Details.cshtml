@page
@model Pop_Alexandru_Aurel_Proiect.Pages.Subscriptions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalii</h1>

<div>
    <h4>Abonament</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Membru
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subscription.Member.Email)
        </dd>
        <dt class="col-sm-2">
           Tip de abonament
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subscription.SubscriptionType.Name)
        </dd>
        <dt class="col-sm-2">
            Data de început
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subscription.StartDate)
        </dd>
        <dt class="col-sm-2">
            Data de sfârșit
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subscription.EndDate)
        </dd>
        <dt class="col-sm-2">
            Este Activ?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subscription.IsActive)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Subscription.SubscriptionId">Editează</a> |
    <a asp-page="./Index">Înapoi la listă</a>
</div>
