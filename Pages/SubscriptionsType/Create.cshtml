@page
@model Pop_Alexandru_Aurel_Proiect.Pages.SubscriptionsType.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Creează</h1>

<h4>Tip de abonament</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="SubscriptionType.Name" class="control-label">Nume</label>
                <input asp-for="SubscriptionType.Name" class="form-control" aria-required="true"/>
                <span asp-validation-for="SubscriptionType.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="SubscriptionType.DurationInDays" class="control-label">Durată în zile</label>
                <input asp-for="SubscriptionType.DurationInDays" class="form-control" aria-required="true"/>
                <span asp-validation-for="SubscriptionType.DurationInDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="SubscriptionType.Price" class="control-label">Preț</label>
                <input asp-for="SubscriptionType.Price" class="form-control" aria-required="true"/>
                <span asp-validation-for="SubscriptionType.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Creează" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Înapoi la listă</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
